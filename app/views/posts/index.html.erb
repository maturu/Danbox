<% provide(:title, 'Home') %>

<div class="row">
  <a href=<%= introduction_path.to_s %>>
    <div class="col-sm-4 introduction">
      <h1>工作入門</h1>
      <h2>ダンボールアートの作り方</h2>
    </div>
  </a>
  <a href=<%= auction_path.to_s %>>
    <div class="col-sm-4 auction">
      <h1>アートワーク<br>オークション</h1>
    </div>
  </a>
  <a href=<%= event_path.to_s %>>
    <div class="col-sm-4 event">
      <h1>イベント</h1>
    </div>
  </a>
</div>

<div id="target" class="post-form">
  <div id="post-prev">
    <img id="post-img-prev" src="#">
  </div>
  <%= form_for @post do |f| %>
      <%= f.text_area :caption, id: "post-caption", class: "form-control", placeholder: "Write a caption ..." %>
    <div>
      <p id="post-caption-count"> 0/140</p>
    </div>

    <label>
      <%= image_tag "post-icon-image.png", id: "post-icon-image" %>
      <%= f.file_field :content, id: "post-img" %>
    </label>

    <div class="actions">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<h3 id="resently-post">最近の投稿</h3>
<div id="post-view" class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-4 post-content modal-item" data-id=<%= post.id %>>
      <% @post_user = User.find(post.user_id) %>
      <div class="modal-item-img">
        <%= image_tag post.content.to_s %>
      </div>
      <div class="modal-item-action">
        <div class="post-user">
          <%= link_to show_path(id: post.user_id) do %>
              <%= image_tag @post_user.avatar.to_s, class: "post-user-avatar" %>
          <% end %>
          <%= link_to @post_user.username, show_path(id: post.user_id), class: "post-user-name" %>
          <div class="follow-user">
            <%= render 'relationships/follow_button', user: @post_user %>
          </div>
        </div>
        <div class="post-comment">
          <% unless post.caption.empty? %>
            <div class="post-comment-item">
              <%= link_to show_path(id: post.user_id) do %>
                <%= image_tag @post_user.avatar.to_s, class: "post-user-avatar" %>
              <% end %>
              <div class="user-txt">
                <%= link_to @post_user.username, show_path(id: post.user_id), class: "post-user-name" %>
                <p><%= simple_format(post.caption) %></p>
              </div>
            </div>
          <% end %>
          <div class="other-comment" id="auto_scroll">
            <%= render partial: 'comments/comment', locals: { comments: Comment.where(post_id: post.id).order("id DESC") } %>
          </div>
        </div>
        <div class="post-like-form">
          <%= render partial: 'likes/like', locals: { post: post } %>
        </div>
        <div class="other-comment-form">
          <%= form_for [post, @comment], remote: true do |f| %>
            <div class="post-comment-form">
              <%= f.text_field :content, placeholder: "コメントを追加...", class: "add-comment", autocomplete: 'off' %>
              <%= f.submit '投稿する', class: "submit-comment" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="modal-window">
</div>
