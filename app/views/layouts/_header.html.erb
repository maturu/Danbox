<% unless request.path_info == new_user_session_path %>
  <header class="navbar navbar-expand-lg">
    <div class="container">
      <%= link_to root_path do %>
        <%= image_tag "logo.png", id: "logo" %>
      <% end %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= image_tag 'icon-post', id: "post-toggle" %></li>
            <li><%= image_tag 'icon-notification' %></li>
            <li>
              <%= link_to show_path(id: current_user.id) do %>
                <% if current_user.avatar? %>
                  <%= image_tag current_user.avatar.to_s, class: "circle-avatar" %>
                <% else %>
                  <%= image_tag 'icon.png', class: "circle-avatar" %>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>
