<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'icon.png' %>
    <%= display_meta_tags(default_meta_tags) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <% if !!alert %>
      <div class="alert alert-danger alert-dismissable fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong><%= alert %></strong>
      </div>
    <% end %>

    <% if request.path_info == new_user_session_path %>
      <%= yield %>
    <% else %>
      <div class="top-size-item"></div>
      <div id="target-id" class="container <%= "modal-event" if (request.path_info == root_path) || (request.path_info == show_path) %>">
        <%= yield %>
      </div>
    <% end %>

    <% if (request.path_info == new_user_session_path) || (request.path_info == show_path) %>
      <%= render 'layouts/footer' %>
    <% end %>
  </body>
</html>

